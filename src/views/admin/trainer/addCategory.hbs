<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainer</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sideBar.css">
</head>

<body>
    {{> header}}
    <div class="wrapper">
        {{> sidebarStaff}}
        <div class="main_content">
            <div class="container">
                <h1 class="text-center">{{trainer.name}} Giảng viên</h1>
                <div class="my-3">
                    <a class="text-decoration-none" href="/admin/viewTrainer/{{trainer._id}}/view"
                        style="font-size: 20px"></a>
                </div>
                <div class="bottom">
                    <div class="row">
                        <div class="col bottom-right">
                            <form class="mt-5" method="POST" action="/admin/viewTrainer/{{trainer._id}}/addCategory">
                                <button class="btn btn-primary">Thêm khóa học</button>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Tên</th>
                                            <th scope="col">Thời gian cập nhật</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categories}}
                                        <tr>
                                            <td><input value="{{this._id}}" class="form-check-input" name="categoriesIds[]"
                                                    type="checkbox">
                                            </td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.dateCreated}}</td>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td class="text-center" colspan="5">
                                                Không có khóa học
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> footer }}
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>